<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="130dp"
    android:layout_height="160dp"
    app:cardBackgroundColor="@color/white"
    android:layout_marginEnd="10dp"
    app:cardElevation="0dp"
    android:backgroundTint="@color/colorMain"
    app:cardCornerRadius="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        app:cardCornerRadius="10dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="30dp"
        app:cardElevation="0dp">

        <ImageView
            android:id="@+id/menu_food_display"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/slack_pic" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/name_dish_card"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="Pizza 4P's"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:textSize="14sp"
        android:fontFamily="@font/baemin"
        android:textColor="@color/black"/>

    <ImageButton
        android:id="@+id/button_dish_card"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="105dp"
        android:layout_marginStart="75dp"
        android:background="@drawable/round_square_corner"
        android:backgroundTint="@color/white"
        android:src="@drawable/ic_baseline_minimize_24" />


</androidx.cardview.widget.CardView>